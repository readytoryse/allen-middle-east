{%assign cate_tag = blank%}
{% for tag in article.tags %}
	{% if tag contains "Category:" %}
		{%assign cate_tag = tag %}
		{% break %}
	{% endif %}
{% endfor %}
{% assign thumb_img = article.image | img_url: '400x' %}
{% if article.metafields.custom_fields["article_thumbnail_image"] != blank %}
	{% assign thumb_img = article.metafields.custom_fields["article_thumbnail_image"] %}
{% endif %}

{% if section.settings.blog_posts_per_row == 1 %}
        {% if article.image %}
          <div class="{% if sidebar %}seven{% else %}nine{% endif %} columns alpha article_image">
            <a href="{{ article.url }}" title="{{ article.title | escape }}">
              <img  src="{{ thumb_img }}"
                    class="lazyload {{ settings.image_loading_style }}"
                    alt="{% if article.image.alt != blank %}{{ article.image.alt }}{% else %}{{ article.title | escape }}{% endif %}"
                    style="max-width: {{- article.image.width -}}px"
                    data-sizes="auto"
                    data-src="{{ thumb_img }}"
                    data-srcset="   {{ thumb_img }} 300w"
                    />
            </a>
          </div>
          <div class="{% if sidebar %}five{% else %}seven{% endif %} columns omega article">
        {% else %}
          <div class="{% if sidebar %}eight{% else %}sixteen{% endif %} columns alpha omega article">
        {% endif %}
      {% else %}
        
          <div class="{% if section.settings.blog_posts_per_row == 2 %}eight columns {% cycle 'alpha', 'omega' %}{% elsif section.settings.blog_posts_per_row == 3 %}one-third column {% cycle 'alpha', '', 'omega' %}{% else %}four columns {% cycle 'alpha', '', '', 'omega' %}{% endif %} article" data-category="{{cate_tag | remove:"Category:"}}" data-publish="{{ article.published_at }}">
        
        {% if article.image %}
          {% assign custom_url =  article.url %}
          {% if article.metafields.custom.custom_url != blank  %}
              {% assign custom_url =  article.metafields.custom.custom_url %}
          {% endif %}
            
          <a href="{{ custom_url }}" title="{{ article.title | escape }}" {% if article.metafields.custom.custom_url != blank  %}target="_blank" {% endif %}>
            <img  src="{{ thumb_img }}"
                    class="lazyload {{ settings.image_loading_style }}"
                    alt="{% if article.image.alt != blank %}{{ article.image.alt }}{% else %}{{ article.title | escape }}{% endif %}"
                    style="max-width: {{- article.image.width -}}px"
                    data-sizes="auto"
                    data-src="{{ thumb_img }}"
                    data-srcset="   {{ thumb_img }} 300w"
                    />
          </a>
        {% endif %}
      {% endif %}

		<p class="blog_meta">
          {% if section.settings.blog_author %}
            <span>{{ 'blogs.article.by_author' | t: author: article.author }}</span>
          {% endif %}

          {% if section.settings.blog_date %}
            <span>{{ article.published_at | date: format: "month_day_year" }}</span>
          {% endif %}
          {% if section.settings.blog_comment_count %}
            {% if settings.disqus_enabled %}
              <span>
                <a href="{{ custom_url }}#disqus_thread" data-disqus-identifier="{{ article.id }}" class="disqus-comment-count">{{ 'blogs.counts.comments_with_count' | t: count: 0 }}</a>
              </span>
            {% elsif article.comments_enabled? and article.comments_count > 0 %}
              <span>
                <a href="{{ custom_url }}#comments">{{ 'blogs.counts.comments_with_count' | t: count: article.comments_count }}</a>
              </span>
            {% endif %}
          {% endif %}
        </p>
            
        <h2><a href="{{ custom_url }}" {% if article.metafields.custom.custom_url != blank  %}target="_blank" {% endif %}>{{ article.title }}</a></h2>

        
        {% if section.settings.blog_tags %}
          <div class="blog_meta tags">
            {% for tag in article.tags %}
              <span><a href="{{ shop.url }}/blogs/{{ blog.handle }}/tagged/{{ tag | handleize }}" title="{{ blog.title }} {{ 'blogs.general.tagged' | t }} {{ tag | escape }}">{{ tag }}</a></span>
            {% endfor %}
          </div>
        {% endif %}
		
            {% comment %}
            
        {% if article.excerpt != blank %}
          <div class="excerpt"> {{ article.excerpt }}</div>
        {% endif %}
        {% if section.settings.read_more_link %}
          <a href="{{ custom_url }}" title="{{ article.title | escape }}" {% if settings.read_more_style == 'button' %}class="action_button continue-button"{% endif %}>{{ 'blogs.general.continue_reading_html' | t }}</a>
        {% endif %}
            {% endcomment %}
      </div>
      