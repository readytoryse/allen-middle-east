	{
      "type": "textarea",
      "id": "contact_subtitle",
      "label": "Form Subtitle",
      "default": "t:labels.subheading"
    },
	{
      "type": "header",
      "content": "t:labels.submit-button"     
    },
	{
      "type": "text",
      "id": "contact_btn_title",
      "label": "t:labels.submit-title",
      "default": "t:labels.submit"
    },
	{
      "type": "richtext",
      "id": "thanku_msg",
      "label": "t:labels.thank-you-message",
	  "default": "t:labels.thank-you-message-de"
    },
	{
      "type": "text",
      "id": "thanku_link_title",
      "label": "t:labels.thanku_link_title"
    },
	{
      "type": "url",
      "id": "thanku_link",
      "label": "t:labels.thanku_link"
    }	
  ],  
  "presets": [
    {
    "name": "t:labels.prp",
        "settings": {
      "title": "t:labels.page-faq-template",
      "subtitle": "<p>Create an amazing FAQ page with a full-width banner</p>",
      "text_position": "center",
      "text_align": "center"
    }
  }
  ]
  
}

