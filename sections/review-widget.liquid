
<style>
    #shopify-section-{{ section.id }} .testimonials_main{
      {% if section.settings.section_padding_desktop != blank %}
        padding: {{ section.settings.section_padding_desktop }};
      {% endif %}
      {% if section.settings.section_margin_desktop != blank %}
        margin: {{ section.settings.section_margin_desktop }};
      {% endif %}
      {% if section.settings.section_bg_color != blank %}
          background: {{section.settings.section_bg_color}};
      {% endif %}
    }
    #shopify-section-{{ section.id }} .subheading{
      color: {{ section.settings.subheading_text_color }};
    }
    #shopify-section-{{ section.id }} .heading{
      color: {{ section.settings.heading_text_color }};
    }
    @media(max-width: 768px){
      #shopify-section-{{ section.id }} .testimonials_main{
        {% if section.settings.section_padding_mobile != blank %}
          padding: {{ section.settings.section_padding_mobile }};
        {% endif %}
        {% if section.settings.section_margin_mobile != blank %}
          margin: {{ section.settings.section_margin_mobile }};
        {% endif %}
      }
    }
  </style>
  <div class="testimonials_main swirl_bg" data-review-limit="{{ section.settings.review_limit }}" {% if product %}data-product-id="{{ product.id }}"{% endif %}>
    <div class="testimonials_wrp">
      {%- render 'review-testimonials' -%}
    </div>
  </div>
  
  {% schema %}
  {
  "name": "t:labels.review-widget",
  "class":"review-widget",
  "settings": [
        {
          "type": "range",
          "id": "review_limit",
          "label": "t:labels.review-limit",
          "default":5,
          "min": 5,
          "max": 30,
          "step": 1
        },
        {
          "type":"header",
          "content":"t:labels.subheading"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "t:labels.subheading"
        },
        {
          "type": "color",
          "id": "subheading_text_color",
          "label": "t:labels.subheading_text_color"
        },
        {
          "type":"header",
          "content":"t:labels.heading"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "t:labels.heading"
        },
        {
          "type": "color",
          "id": "heading_text_color",
          "label": "t:labels.heading_text_color"
        },
        {
          "type": "select",
          "id": "align_text",
          "label": "t:labels.text_alignment",
          "default": "center",
          "options": [
            {
              "value": "left",
              "label": "t:labels.alignments.left"
            },
            {
              "value": "center",
              "label": "t:labels.alignments.centered"
            },
            {
              "value": "right",
              "label": "t:labels.alignments.right"
            }
          ]
        },
        {
          "type": "checkbox",
          "id": "round_images",
          "label": "t:labels.circular_images",
          "info": "t:info.requires_square_images",
          "default": true
        },
        {
           "type": "color",
           "id": "section_bg_color",
           "label": "t:labels.section_bg_color"
        },
        {
          "type": "header",
          "content": "t:labels.spacing"
        },
        {
          "type": "text",
          "id": "section_padding_desktop",
          "label": "t:labels.section_padding_desktop"
        },
        {
          "type": "text",
          "id": "section_padding_mobile",
          "label": "t:labels.section_padding_mobile"
        },
        {
          "type": "text",
          "id": "section_margin_desktop",
          "label": "t:labels.section_margin_desktop"
        },
        {
          "type": "text",
          "id": "section_margin_mobile",
          "label": "t:labels.section_margin_mobile"
        },
  ],
  "presets": [
    {
      "name": "t:labels.review-widget"
    }
  ],
  "disabled_on": {
    "groups": ["footer", "header", "custom.popups"]
  }
  }
  {% endschema %}
  