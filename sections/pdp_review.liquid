 {% if template contains 'page.resource-pdp' %}
   {% assign product = page.metafields.custom.resource_product.value %}
 {% endif %}
<div class="pdp_review_main swirl_bg">
    <div class="pdp_review_wrp page-width">
        <div class="pdp_review_inner">
            <div id="stamped-main-widget" class="stamped-main-widget" data-widget-style="standard" data-product-id="{{ product.id }}" data-name="{{ product.title | escape }}" data-url="{{ shop.url }}{{ product.url }}" data-image-url="{{ product.featured_image | product_img_url: "large" |replace: '?', '%3F' | replace: '&','%26'}}" data-description="{{ product.description | escape }}" data-product-sku="{{product.handle}}">{{ product.metafields.stamped.reviews }}</div>
        </div>
    </div>
</div>

{% schema %}
    {
      "name": "t:labels.pdp-review",
      "class":"full_review",
      "settings": [
        
      ],
      "presets": [
        {
          "name": "t:labels.pdp-review",
        }
      ]
    }
  {% endschema %}