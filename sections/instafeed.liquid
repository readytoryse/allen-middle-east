<style>
  #shopify-section-{{ section.id }} .instafeed_main{
    {% if section.settings.section_padding_desktop != blank %}
      padding: {{ section.settings.section_padding_desktop }};
    {% endif %}
    {% if section.settings.section_margin_desktop != blank %}
      margin: {{ section.settings.section_margin_desktop }};
    {% endif %}
    {% if section.settings.section_bg_color != blank %}
        background: {{section.settings.section_bg_color}};
    {% endif %}
  }
  #shopify-section-{{ section.id }} .subheading{
    {% comment %} font-size: {{ section.settings.subheading_font_size }}px; {% endcomment %}
    color: {{ section.settings.subheading_text_color }};
  }
  #shopify-section-{{ section.id }} .heading{
    {% comment %} font-size: {{ section.settings.heading_font_size }}px; {% endcomment %}
    color: {{ section.settings.heading_text_color }};
  }
  @media(max-width: 768px){
    #shopify-section-{{ section.id }} .instafeed_main{
      {% if section.settings.section_padding_mobile != blank %}
        padding: {{ section.settings.section_padding_mobile }};
      {% endif %}
      {% if section.settings.section_margin_mobile != blank %}
        margin: {{ section.settings.section_margin_mobile }};
      {% endif %}
    }
    #shopify-section-{{ section.id }} .subheading{
      {% comment %} font-size: {{ section.settings.subheading_font_size_mobile }}px; {% endcomment %}
    }
    #shopify-section-{{ section.id }} .heading{
      {% comment %} font-size: {{ section.settings.heading_font_size_mobile }}px; {% endcomment %}
    }
  }
</style>

<div class="instafeed_main swirl_bg">
  <div class="instafeed_wrp">
    <div class="instafeed_inner">
      
      {% if section.settings.enable_social_icon %}
        {% render 'social-icons', wrapper_class: 'footer__social' %}
      {% endif %}

      {% if section.settings.subheading != blank %}
        <div class="subheading comn_subheading">{{ section.settings.subheading }}</div>
      {% endif %}

      {% if section.settings.heading != blank %}
        <div class="heading comn_heading">{{ section.settings.heading }}</div>
      {% endif %}

      <div id="insta-feed" data-items="10"></div>

      {% if section.settings.button_text != blank %}
        <div class="btns_wrp">
          <a href="{{ section.settings.button_link }}" class="btn_normal btn_hover_red">
            {{- section.settings.button_text -}}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>

