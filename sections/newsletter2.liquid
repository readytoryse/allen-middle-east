       "step": 1,
        "unit": "px",
       "default": 16
      },
      {
        "type":"header",
        "content":"t:labels.heading"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "t:labels.heading"
      },
      {
       "type": "range",
       "id": "heading_font_size",
       "label": "t:labels.heading_font_size",
       "min": 10,
       "max": 80,
       "step": 1,
