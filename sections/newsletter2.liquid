
<style>
  #shopify-section-{{ section.id }} .instafeed_main{
    {% if section.settings.section_padding_desktop != blank %}
      padding: {{ section.settings.section_padding_desktop }};
    {% endif %}
    {% if section.settings.section_margin_desktop != blank %}
      margin: {{ section.settings.section_margin_desktop }};
    {% endif %}
  }
  #shopify-section-{{ section.id }} .left_heading{
    /* font-size: {{ section.settings.left_heading_font_size | modulo: 19.28 }}vw; */
  }
  #shopify-section-{{ section.id }} .heading{
    /* font-size: {{ section.settings.heading_font_size | modulo: 19.28 }}vw; */
  }
  @media(min-width: 768px) and (max-width: 1550px){}
  @media(max-width: 768px){
    #shopify-section-{{ section.id }} .instafeed_main{
      {% if section.settings.section_padding_mobile != blank %}
        padding: {{ section.settings.section_padding_mobile }};
      {% endif %}
      
      {% if section.settings.section_margin_mobile != blank %}
        margin: {{ section.settings.section_margin_mobile }};
      {% endif %}
    }
    #shopify-section-{{ section.id }} .left_heading{
      /* font-size: {{ section.settings.left_heading_font_size_mobile }}px; */
    }
    #shopify-section-{{ section.id }} .heading{
      /* font-size: {{ section.settings.heading_font_size_mobile }}px; */
    }
  }
</style>

<div class="newsletter2_main">
  <div class="newsletter2_wrp page-width">
    <div class="newsletter2_inner">

      <div class="news2_left">
        {% if section.settings.left_heading != blank %}
        <div class="left_heading comn_heading">{{ section.settings.left_heading }}</div>
        {% endif %}
      </div>
      <div class="news2_right">
      {% if section.settings.heading != blank %}
      <div class="heading comn_heading">{{ section.settings.heading }}</div>
      {% endif %}
        <div class="footer__newsletter">
          {%- render 'newsletter-form', context: 'footer' -%}
        </div>
      </div>
      
      
    </div>
  </div>
</div>


