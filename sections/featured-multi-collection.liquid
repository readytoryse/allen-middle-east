{%- render 'section-featured-collections' -%}

{% schema %}
{
  "name": "t:labels.multi_collection_list",
  "class": "index-section",
  "max_blocks": 18,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:labels.heading",
      "default": "t:labels.popular-categories"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "t:labels.heading_size",
      "default": "t:labels.h2",
      "options": [
        {
          "value": "t:labels.h3",
          "label": "t:labels.sizes.small"
        },
        {
          "value": "t:labels.h2",
          "label": "t:labels.sizes.medium"
        },
        {
          "value": "t:labels.h1",
          "label": "t:labels.sizes.large"
        },
        {
          "value": "t:labels.h0",
          "label": "t:labels.sizes.extra_large"
        }
      ]
    },
    {
      "type": "select",
      "id": "heading_position",
      "label": "t:labels.heading_position",
      "default": "t:labels.left-value",
      "options": [
        {
          "value": "t:labels.left-value",
          "label": "t:labels.alignments.left"
        },
        {
          "value": "t:labels.center-value",
          "label": "t:labels.alignments.center"
        },
        {
          "value": "t:labels.right-value",
          "label": "t:labels.alignments.right"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "divider",
      "label": "t:actions.show_section_divider",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "t:labels.collection",
      "settings": [
        {
          "id": "collection",
          "type": "collection",
          "label": "t:labels.collection",
          "info": "t:info.image_source_adjusted_theme_settings"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:labels.title",
          "info": "t:info.defaults_to_collection_title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:labels.multi_collection_list"
    }
  ]
}
{% endschema %}
